<div class="row">
  <% @movies.each do |movie|  %>
  <div class="col s12 m12 l3">
    <div class="jumbotron">
      <div class="z-depth-1">
        <b>
          <center>
            <%= link_to movie.name, movie_path(movie) %>
          </center>
        </b>
      </div>
      <div class="z-depth-1">
        <center>
          <%= image_tag(movie.image.url, height: "310px",class:"materialboxed") %>
        </center>
      </div>
      <ul class="collapsible" data-collapsible="accordion">
        <li>
          <div class="collapsible-header active">
            <center>
              Actors
            </center>
          </div>
          <div class="collapsible-body">
            <p>
              <% movie.actors.each do |actor| %>
              <%= actor.name %>&nbsp;
              <% end %>
            </p>
          </div>
        </li>
        <li>
          <div class="collapsible-header active">
            <center>
              Directors
            </center>
          </div>
          <div class="collapsible-body">
            <p>
              <% movie.directors.each do |director| %>
              <%= director.name %>
              <% end %>
              <br>
            </p>
          </div>
        </li>
      </ul>
    </div>
  </div>
  <% end %>
</div>
